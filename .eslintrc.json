{
  "env": {
    "jest": true,
    "browser": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": [
      "error"
    ],
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "no-return-assign": [
      "off"
    ],
    "import/no-named-as-default": [
      "off"
    ],
    "import/no-named-as-default-member": [
      "off"
    ],
    "max-len": [
      "error",
      {
        "code": 200,
        "ignoreComments": true
      }
    ],
    "object-curly-newline": [
      "error",
      {
        "ImportDeclaration": "never"
      }
    ],
    "no-await-in-loop": [
      "off"
    ],
    "no-case-declarations": [
      "off"
    ],
    "no-restricted-syntax": [
      "error",
      "WithStatement"
    ],
    "default-case": "off",
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "import/no-extraneous-dependencies": "off",
    "padded-blocks": "off",
    "lines-between-class-members": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".ts",
          ".tsx",
          ".js",
          ".jsx"
        ]
      }
    }
  }
}
